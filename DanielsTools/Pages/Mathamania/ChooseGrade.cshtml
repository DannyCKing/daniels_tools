@page
@model DanielsTools.Pages.Mathamania.ChooseGradeModel
@{ 
    ViewData["Title"] = "Choose Grade";
}

<link rel="stylesheet" href="~/css/math.css" />
<script src="~/js/shared_math.js" asp-append-version="true"></script>
<script src="~/js/grade.js" asp-append-version="true"></script>

<h1 class="unselectable">Choose Grade</h1>

<div>
    <div class="container-fluid">
        <div class="row">
            <div class="col-12 col-sm-12 col-md-6 col-lg-3 col-xl-3">
                <button id="grade_button_K" class="btn btn-success large_button grade_button unselectable grade_button">K</button>
            </div>
            <div class="col-12 col-sm-12 col-md-6 col-lg-3 col-xl-3">
                <button id="grade_button_1" class="btn btn-success large_button grade_button unselectable grade_button">1</button>
            </div>
            <div class="col-12 col-sm-12 col-md-6 col-lg-3 col-xl-3">
                <button id="grade_button_2" class="btn btn-success large_button grade_button unselectable grade_button">2</button>
            </div>
            <div class="col-12 col-sm-12 col-md-6 col-lg-3 col-xl-3">
                <button id="grade_button_3" class="btn btn-success large_button grade_button unselectable grade_button">3</button>
            </div>
            <div class="col-12 col-sm-12 col-md-6 col-lg-3 col-xl-3">
                <button id="grade_button_4" class="btn btn-success large_button grade_button unselectable grade_button">4</button>
            </div>
            <div class="col-12 col-sm-12 col-md-6 col-lg-3 col-xl-3">
                <button id="grade_button_5" class="btn btn-success large_button grade_button unselectable grade_button">5</button>
            </div>
            <div class="col-12 col-sm-12 col-md-6 col-lg-3 col-xl-3">
                <button id="grade_button_6" class="btn btn-success large_button grade_button unselectable grade_button">6</button>
            </div>
            <div class="col-12 col-sm-12 col-md-6 col-lg-3 col-xl-3">
                <button id="grade_button_custom" class="btn btn-success large_button grade_button unselectable grade_button">Custom</button>
            </div>
        </div>
    </div>
</div>

